<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <properties>
        <property name="log.dir">./logs</property>
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%-5p][%F:%L] - %m%n</Pattern>
            </PatternLayout>
        </Console>

        <RollingRandomAccessFile name="RootLog" fileName="${log.dir}/usercenter-server.log"
                                 filePattern="${log.dir}/usercenter-server.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%-5p][%c{1}] - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="CheckAlive" fileName="${log.dir}/usercenter-server.check.log"
                                 filePattern="${log.dir}/usercenter-server.check.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%-5p][%c{1}] - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="RequestLog" fileName="${log.dir}/usercenter-server.request.log"
                                 filePattern="${log.dir}/usercenter-server.request.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%-5p][%c{1}] - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>


        <CatAppender name="CatAppender"/>


    </Appenders>


    <Loggers>
        <Logger name="CHECK" level="info" additivity="false">
            <AppenderRef ref="CheckAlive"/>
        </Logger>
        <Logger name="REQUEST" level="info" additivity="true">
            <AppenderRef ref="RequestLog"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="RootLog"/>
            <AppenderRef ref="CatAppender"/>
        </Root>
    </Loggers>
</Configuration>
